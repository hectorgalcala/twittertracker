<p id="notice"><%= notice %></p>

<p>
  <strong>Keyword:</strong>
  <%= @tweet.keyword %>
</p>

<p>
  <strong>Result type:</strong>
  <%= @tweet.result_type %>
</p>

<p>
  <strong>Limit:</strong>
  <%= @tweet.limit %>
</p>

<%= link_to 'Edit', edit_tweet_path(@tweet) %> |
<%= link_to 'Back', tweets_path %>


<div class="container">
<% counter = 0 %>
<% @client.search(@tweet.keyword, result_type: @tweet.result_type).take(@tweet.limit).collect do |tweet| %>
  <% counter += 1 %>
  <h2><%= counter %></h2>
  <h3>Usuario</h3>
  <p><%= tweet.user.screen_name %></p>
    <h3>Nombre de Usuario</h3>
    <p><%= tweet.user.name %> </p>
    <h3>Tweet:</h3>
    <p><%= tweet.full_text %></p>



  <h3>Hora del tweet</h3>
   <p><%= distance_of_time_in_words_to_now(tweet.created_at) %></p>
<%  end %>
</div>
