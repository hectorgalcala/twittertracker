<div class="container">
<% counter = 0 %>
<% @client.search(@first_tweet.keyword, result_type: @first_tweet.result_type).take(@first_tweet.limit).collect do |tweet| %>
  <% counter += 1 %>
  <h2><%= counter %></h2>
  <h3>Usuario</h3>
  <p><%= tweet.user.screen_name %></p>
    <h3>Nombre de Usuario</h3>
    <p><%= tweet.user.name %> </p>
    <h3>Tweet:</h3>
    <p><%= tweet.full_text %></p>

      <!-- <h3>Biografia del usuario</h3> -->
     <!-- <p><%#= tweet.user.description %></p> -->
    <!-- <h3>ID de Usuario:</h3> -->
    <!-- <p><%#= tweet.user.id %></p> -->

  <h3>Hora del tweet</h3>
   <p><%= distance_of_time_in_words_to_now(tweet.created_at) %></p>
<%  end %>
</div>
